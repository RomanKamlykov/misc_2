<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Roboto&display=swap">
  <link rel="stylesheet" href="./libs/normalize.css">
  <link rel="stylesheet" href="./stylesheets/main.css">
  <link rel="stylesheet" href="./stylesheets/search.css">
  <title>Document</title>
</head>
<body>
  <div class="search-page">
    <nav class="nav">
      <ul>
        <li><a href="/home">🏠</a></li>
      </ul>
      <ul>
        <li><a href="/notes-tree">🌳</a></li>
      </ul>
    </nav>

    <div class="search-form">
      <h3>Search</h3>
      <form action="/search" method="GET">
        <input type="text" name="query" id="search" value="<%= query %>" />
        <input type="submit" value="Search" />
      </form>
    </div>

    <div class="notes">
      <h3>Notes</h3>
      <ul>
        <% notes.forEach((note) => { %>
          <li>
            <a href="/view?id=<%= note._id %>"><%= note.title || 'Untitled' %></a>
          </li>
        <% }); %>
      </ul>
    </div>

  </div>
</body>
</html>
