{
    "compilerOptions": {
        "target": "ES2019",
        "moduleResolution": "Node",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "exclude": [
        "node_modules"
    ]
}